<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView android:text="Cadastro de Bancos"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <EditText android:hint="Banco Exemplo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:id="@+id/nome_banco"/>
    
    <EditText android:hint="Rua Amador Bueno 381, Santo Amaro, Sao Paulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/endereco_banco"/>
    
    <TextView android:text="Como vocÃª avaliaria este banco"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <RatingBar android:id="@+id/nota_banco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:max="10"/>

    <Button
        android:id="@+id/formulario_salvar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:onClick="abrirLista"
        android:text="Salvar"
        android:textColor="#ffffff" />
    
    
</LinearLayout>